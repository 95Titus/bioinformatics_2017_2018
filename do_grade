#!/bin/bash

function show_grade {
  n_points=$1
  if [[ n_points < 1 ]]; then $n_points=$((n_points+1)); fi
  echo "Grade: "$n_points
}

n_points=0

if [[ ! -f grade_me.txt ]] ; 
then
  echo "File 'grade_me.txt' not found" 
  show_grade $n_points
  exit
fi


username=`cat grade_me.txt | head -n 1 | cut -d " " -f 1`
reponame=`cat grade_me.txt | head -n 1 | cut -d " " -f 2`

echo "Username: "$username
echo "Reponame: "$reponame
